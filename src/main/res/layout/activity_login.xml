<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name:"
            android:id="@+id/username_textview"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="56dp"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/username_editview"
            android:layout_alignBottom="@+id/username_textview"
            android:layout_toRightOf="@+id/username_textview"
            android:minWidth="210dp"
            android:layout_marginLeft="25dp"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password:"
            android:id="@+id/password_textView"
            android:layout_below="@+id/username_textview"
            android:layout_alignLeft="@+id/username_textview"
            android:layout_marginTop="26dp"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password_editText"
            android:minWidth="130dp"
            android:layout_alignBottom="@+id/password_textView"
            android:layout_alignLeft="@+id/username_editview"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Provider:"
            android:id="@+id/provider_textView"
            android:layout_below="@+id/password_textView"
            android:layout_alignLeft="@+id/password_textView"
            android:layout_marginTop="23dp"/>

    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:layout_below="@+id/password_editText"
            android:layout_alignLeft="@+id/password_editText"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:id="@+id/login_button"
            android:layout_marginTop="33dp"
            android:layout_below="@+id/invalid_text"
            android:layout_toRightOf="@+id/username_textview"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/invalid_text"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/provider_textView"
            android:layout_alignRight="@+id/password_editText"/>

</RelativeLayout>
